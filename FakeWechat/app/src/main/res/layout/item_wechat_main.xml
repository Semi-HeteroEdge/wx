<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height">

    <FrameLayout
        android:id="@+id/item_wechat_main_layout_headimg"
        android:layout_width="@dimen/wechat_hdimg_layout"
        android:layout_height="@dimen/wechat_hdimg_layout"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/item_margin_left_10dp">


    <ImageView
        android:id="@+id/item_wechat_main_iv_headimg"
        android:layout_width="@dimen/wechat_img_height"
        android:layout_gravity="center"
        android:layout_height="@dimen/wechat_img_height"
        android:layout_centerVertical="true"
        android:src="@drawable/hdimg_3" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/wechat_img_height"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_img"
        android:layout_toRightOf="@+id/item_wechat_main_layout_headimg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_wechat_main_tv_username"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin"
            android:layout_weight="1"
            android:text="@string/blank_username"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/content_text_16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/wechat_img_height"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/item_margin_left"
        android:orientation="vertical">

    </LinearLayout>

</RelativeLayout>